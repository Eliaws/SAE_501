{% extends "layouts/front-end/base.njk" %}
{% set activePage = 'sur les médias' %}


{% block title %}Sur les médias{% endblock %}

{% set video_list = [
    {
        url: "https://www.youtube.com/embed/oiEbQF7qfBU",
        title: "La nouvelle réforme : le BUT MMI"
    },
    {
        url: "https://www.youtube.com/embed/SyjF4h2Zb7Q",
        title: "Pourquoi étudier à l'IUT CYU ?"
    },
    {
        url: "https://www.youtube.com/embed/t72pdxpNjyc",
        title: "Job interview en anglais au département MMI"
    },
    {
        url: "https://www.youtube.com/embed/xD4wshE0hEg",
        title: "L'importance de l'IUT dans les études supérieures"
    }
] %}

{% block main %}
<div class="max-w-5xl mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Les actualités et les évènements importants du BUT et de l'IUT CY Paris Université dans les médias</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {% for video in video_list %}
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="relative w-full h-60">
                <iframe 
                    src="{{ video.url }}" 
                    class="absolute inset-0 w-full h-full"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
                </iframe>
            </div>
            <div class="p-4">
                <h2 class="text-lg font-semibold mb-2">{{ video.title }}</h2>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
