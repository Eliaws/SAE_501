{% extends "layouts/front-end/base.njk" %}

{% block title %}{{ article.title }}{% endblock %}

{% block main %}
<article class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <!-- Barre de progression -->
    <div id="progress-container" class="w-full h-2 bg-gray-200 fixed top-0 left-0 z-50">
        <div id="progress-bar" class="h-2 bg-green-500 w-0"></div>
    </div>

    <!-- Header de l'article -->
    <header class="mb-6 text-center">
        <h1 class="text-3xl font-bold text-gray-800">{{ article.title }}</h1>
        <p class="text-gray-600 mt-2">
            Par <a href="/author/{{ article.author._id }}" class="font-semibold text-blue-500 hover:underline">
                {{ article.author.firstname~' '~article.author.lastname }}
            </a> 
            le <time datetime="{{ article.updated_at }}" class="italic">{{ article.updated_at|date("dd/LL/yyyy à HH:mm") }}</time>
        </p>
    </header>

    <!-- Image de l'article si disponible -->
    {% if article.image %}
    <div class="mb-6">
        <img src="{{ article.image }}" alt="Illustration de {{ article.title }}" class="w-full h-auto object-cover rounded-lg shadow-md">
    </div>
    {% endif %}

    <!-- Contenu de l'article -->
    <section class="text-gray-700 leading-relaxed">
        <p>{{ article.content }}</p>
    </section>

    <!-- Vidéo YouTube si disponible -->
    {% if article.video_url %}
    <div class="mt-6">
        <iframe class="w-full h-64 md:h-96" src="{{ article.video_url }}" frameborder="0" allowfullscreen></iframe>
    </div>
    {% endif %}
</article>
    {% block commentaires_articles %}
    <section>
        <h2 class="text-2xl font-bold text-gray-800 mt-10 mb-4">Commentaires</h2>
        <div class="max-w-3xl mx-auto">
            <form action="" method="post" class="mb-6">
                <label for="nickname" class="block mb-2 text-gray-700">Votre pseudonyme</label>
                <input type="text" name="nickname" id="nickname" class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-500">
                <label for="content" class="block mb-2 text-gray-700">Votre commentaire</label>
                <textarea name="content" id="content" cols="30" rows="5" class="w-full border border-gray-300 rounded-lg p-2 focus:outline-none focus:border-blue-500 focus:ring focus:ring-blue-500"></textarea>
                <button type="submit" class="mt-2 bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600">Envoyer</button>
            </form>
        </div>
        <div class="max-w-3xl mx-auto">
            <ul>
                {% for comment in article.comments %}
                <li class="mb-4">
                    <p class="text-gray-700">{{ comment.content }}</p>
                    <p class="text-gray-600 text-sm mt-2">Par {{ comment.author.firstname~' '~comment.author.lastname }} le {{ comment.created_at|date("dd/LL/yyyy à HH:mm") }}</p>
                </li>
                {% endfor %}
            </ul>
        </div>
    </section>
    {% endblock %}
{% include "components/front-end/barre-progression.njk" %}
{% endblock %}