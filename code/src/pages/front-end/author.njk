{% extends "layouts/front-end/base.njk" %}

{% block title %}Profil de {{ author.firstname }} {{ author.lastname }}{% endblock %}

{% block main %}
<section class="max-w-3xl mx-auto mt-10 p-6 bg-white shadow-lg rounded-lg">
    <!-- Profil de l'auteur -->
    <div class="text-center mb-6">
        {% if author.profile_picture %}
        <img src="{{ author.profile_picture }}" alt="Photo de {{ author.firstname }} {{ author.lastname }}" class="w-32 h-32 rounded-full mx-auto shadow-md">
        {% endif %}
        <h1 class="text-3xl font-bold text-gray-800 mt-4">{{ author.firstname }} {{ author.lastname }}</h1>
        <p class="text-gray-600 mt-2">{{ author.bio }}</p>
    </div>

    <!-- Liste des articles de l'auteur -->
    <div>
        <h2 class="text-2xl font-semibold text-gray-700 mb-4">Articles écrits par {{ author.firstname }}</h2>
        <ul class="space-y-4">
            {% for article in author.articles %}
            <li class="border-b pb-2">
                <a href="/article/{{ article.id }}" class="text-blue-500 font-semibold hover:underline">{{ article.title }}</a>
                <p class="text-gray-500 text-sm">Publié le {{ article.updated_at|date("dd/LL/yyyy") }}</p>
            </li>
            {% endfor %}
        </ul>
    </div>
</section>
{% endblock %}
